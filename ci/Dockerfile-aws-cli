# RUN aws --version && jq --version && docker --version
# 1. Install dependencies (aws-cli, jq)
# Alpine provides aws-cli in its community repository
FROM docker:26
RUN apk add --no-cache \
    aws-cli \
    jq

# 2. Verify installations
RUN aws --version && jq --version && docker --version